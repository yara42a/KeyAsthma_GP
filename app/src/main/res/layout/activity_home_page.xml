<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/KeyAs"
    tools:context=".HomePage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="357dp"
        android:layout_height="327dp"
        android:layout_marginVertical="200dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/testingTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Dust"
            android:layout_width="174dp"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Dust Level:"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/Brown"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/Humidity"
            app:layout_constraintEnd_toStartOf="@+id/dustlevel"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.633" />

        <TextView
            android:id="@+id/Humidity"
            android:layout_width="232dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp"
            android:text="Humidity Level:"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/Brown"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/airquality"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.532" />

        <TextView
            android:id="@+id/dustlevel"
            android:layout_width="154dp"
            android:layout_height="58dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/Brown"
            android:text=" "
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/Humidity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.641" />

        <TextView
            android:id="@+id/humiditylevel"
            android:layout_width="124dp"
            android:layout_height="49dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/Brown"
            android:text=" "
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/airquality"
            app:layout_constraintStart_toEndOf="@+id/Humidity"
            app:layout_constraintTop_toBottomOf="@+id/dustlevel"
            app:layout_constraintVertical_bias="0.751" />

        <TextView
            android:id="@+id/airquality"
            android:layout_width="215dp"
            android:layout_height="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/alegreya"
            android:paddingTop="20dp"
            android:textColor="@color/Brown"
            android:text=""
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.73" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/testingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copy"
        android:textSize="14sp"
        android:textColor="@color/Brown"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
